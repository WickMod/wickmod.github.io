---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectGrid from '../components/ProjectGrid.astro';
import LoadingScreen from '../../src/components/LoadingScreen.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<LoadingScreen></LoadingScreen>
	<body>
		<Header />

		<div class="intro">
			<h1 style="margin-top:20px; margin-bottom:20px;">Technical Designer</h1>
			<div style="display:flex">
				<div class="lhs">
					<h5>Equal parts technical and creative</h5>
						<p> Iâ€™m a cross-discipline game developer with
							strong artistic vision and the technical
							knowledge to make it happen.
						</p>

				</div>
				<div class="rhs">
					<h5>Proficiencies</h5>
					<ul>
						<li>C#</li>
					</ul>
				</div>
			</div>
		</div>

		<h1 style="margin-top:20px; margin-bottom:20px;">Game Projects</h1>
		<ProjectGrid/>
		<Footer />
	</body>
</html>

<style>
	h1{
		text-align: center;
	}
	.intro{
		background-color: var(--sage);
		box-shadow:  0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
		margin:3%;
		padding:1% 3% 3% 3%;

	}

	.intro .lhs{
		width: 50%;
		padding:3%;
	}
	.intro .rhs{
		max-width:50%;	
		padding:3%;
	}

</style>